<?xml version="1.0" encoding="utf-8"?>
<spec xmlns:m="http://www.w3.org/1998/Math/MathML" xmlns:style="http://siyavula.com/cnxml/style/0.1">

  <entry id="inline-element">
    <children>
      <one-of>
	<element>br</element>
	<element>space</element>
	<element>newline</element>
	<element>chem_compound</element>
	<element>correct</element>
	<element>currency</element>
	<element>emphasis</element>
	<element>latex</element>
	<element>link</element>
	<element>m:math</element>
	<element>nth</element>
	<element>nuclear_notation</element>
	<element>number</element>
	<element>percentage</element>
	<element>spec_note</element>
	<element>sub</element>
	<element>sup</element>
	<element>unit_number</element>
	<element>unit</element>
	<element>input</element>
	<element>font</element><!-- HACK -->
      </one-of>
    </children>
  </entry>

  <entry>
    <xpath>//font</xpath>
    <attributes>
      <entry>
	<name>color</name>
	<type>string</type>
	<default/>
      </entry>
    </attributes>
    <children>
      <reference>inline-elements</reference>
    </children>
  </entry>

  <entry>
    <xpath>//html5table</xpath>
    <attributes>
      <entry>
	<name>id</name>
	<type>string</type>
	<default/>
      </entry>

      <!-- HACK -->
      <entry>
	<name>border</name>
	<type>integer</type>
	<default/>
      </entry>
      <entry>
	<name>width</name>
	<type>string</type>
	<default/>
      </entry>
      <!-- /HACK -->

    </attributes>
    <children>
      <optional>caption</optional>
      <optional>thead</optional>
      <optional>tfoot</optional>
      <one-of>
	<any-number from="1">
	  <element>tbody</element>
	</any-number>
	<any-number from="1">
	  <element>tr</element>
	</any-number>
      </one-of>
    </children>
    <notext/>
    <conversion-callback name="latex learner correct teacher">
return "%HTML5 Table TODO
    </conversion-callback>
    <conversion-callback name="html learner correct teacher">
self.tag = 'table'
return etree.tostring(self, pretty_print=True)
    </conversion-callback>
  </entry>

  <entry>
    <xpath>//html5table//tr</xpath>
    <attributes>
      <!-- HACK -->
      <entry>
	<name>style</name>
	<type>string</type>
	<default/>
      </entry>
      <!-- /HACK -->
    </attributes>
    <children>
      <any-number from="1">
	<one-of>
	  <element>th</element>
	  <element>td</element>
	</one-of>
      </any-number>
    </children>
    <notext/>
  </entry>

  <entry>
    <xpath>//html5table//tr/th</xpath>
    <attributes>
      <entry>
	<name>rowspan</name>
	<type>integer(0,)</type>
	<default/>
      </entry>
      <entry>
	<name>colspan</name>
	<type>integer(0,)</type>
	<default/>
      </entry>

      <!-- HACK -->
      <entry>
	<name>align</name>
	<type>enum('left','right','center')</type>
	<default/>
      </entry>
      <entry>
	<name>style</name>
	<type>string</type>
	<default/>
      </entry>
      <!-- /HACK -->

    </attributes>
    <children>
      <one-of>
	<reference>block-or-minor-environment-elements</reference>
	<reference>inline-elements</reference>
      </one-of>
    </children>
  </entry>

  <entry>
    <xpath>//html5table//tr/td</xpath>
    <attributes>
      <entry>
	<name>rowspan</name>
	<type>integer(0,)</type>
	<default/>
      </entry>
      <entry>
	<name>colspan</name>
	<type>integer(0,)</type>
	<default/>
      </entry>

      <!-- HACK -->
      <entry>
	<name>align</name>
	<type>enum('left','right','center')</type>
	<default/>
      </entry>
      <entry>
	<name>style</name>
	<type>string</type>
	<default/>
      </entry>
      <!-- /HACK -->

    </attributes>
    <children>
      <one-of>
	<reference>block-or-minor-environment-elements</reference>
	<reference>inline-elements</reference>
      </one-of>
    </children>
  </entry>

</spec>
