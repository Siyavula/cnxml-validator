<?xml version="1.0" encoding="utf-8"?>
<spec xmlns:m="http://www.w3.org/1998/Math/MathML" xmlns:style="http://siyavula.com/cnxml/style/0.1">

  <entry>
    <xpath>//style</xpath>
    <attributes>
      <!-- HACK -->
      <entry>
	<name>font-color</name>
	<type>string</type>
	<default/>
      </entry>
      <!-- /HACK -->
    </attributes>
    <children>
      <reference>inline-elements</reference>
    </children>
  </entry>

  <entry>
    <xpath>//para</xpath>
    <!-- /HACK -->
    <attributes>
      <entry>
	<name>align</name>
	<type>enum("center",)</type>
	<default/>
      </entry>
    </attributes>
    <!-- /HACK -->
    <children>
      <any-number>
	<one-of>
	  <reference>block-no-para-element</reference>
	  <reference>inline-element</reference>
	</one-of>
      </any-number>
    </children>
  </entry>

  <entry>
    <xpath>//number</xpath>
    <children>
      <subset-of>
	<element>coeff</element>
	<element>base</element>
	<element>exp</element>
      </subset-of>
    </children>
    <!--<validation-callback>is_number</validation-callback>-->
  </entry>

  <entry>
    <xpath>//html5table</xpath>
    <attributes>
      <entry>
	<name>id</name>
	<type>string</type>
	<default/>
      </entry>

      <!-- HACK -->
      <entry>
	<name>border</name>
	<type>integer</type>
	<default/>
      </entry>
      <entry>
	<name>width</name>
	<type>string</type>
	<default/>
      </entry>
      <entry>
	<name>table_frame</name>
	<type>string</type>
	<default/>
      </entry>
      <entry>
	<name>rowsep</name>
	<type>integer</type>
	<default/>
      </entry>
      <entry>
	<name>colsep</name>
	<type>integer</type>
	<default/>
      </entry>
      <!-- /HACK -->

    </attributes>
    <children>
      <optional>caption</optional>
      <optional>thead</optional>
      <optional>tfoot</optional>
      <one-of>
	<any-number from="1">
	  <element>tbody</element>
	</any-number>
	<any-number from="1">
	  <element>tr</element>
	</any-number>
      </one-of>
    </children>
    <notext/>
    <conversion-callback name="latex learner correct teacher">
return "%HTML5 Table TODO
    </conversion-callback>
    <conversion-callback name="html learner correct teacher">
self.tag = 'table'
return etree.tostring(self, pretty_print=True)
    </conversion-callback>
  </entry>

  <entry>
    <xpath>//html5table//tr</xpath>
    <attributes>
      <!-- HACK -->
      <entry>
	<name>style</name>
	<type>string</type>
	<default/>
      </entry>
      <entry>
	<name>align</name>
	<type>string</type>
	<default/>
      </entry>
      <!-- /HACK -->
    </attributes>
    <children>
      <any-number from="1">
	<one-of>
	  <element>th</element>
	  <element>td</element>
	</one-of>
      </any-number>
    </children>
    <notext/>
  </entry>

  <entry>
    <xpath>//html5table//tr/th</xpath>
    <attributes>
      <entry>
	<name>rowspan</name>
	<type>integer(0,)</type>
	<default/>
      </entry>
      <entry>
	<name>colspan</name>
	<type>integer(0,)</type>
	<default/>
      </entry>

      <!-- HACK -->
      <entry>
	<name>align</name>
	<type>enum('left','right','center')</type>
	<default/>
      </entry>
      <entry>
	<name>style</name>
	<type>string</type>
	<default/>
      </entry>
      <entry>
	<name>width</name>
	<type>string</type>
	<default/>
      </entry>
      <!-- /HACK -->

    </attributes>
    <children>
      <one-of>
	<reference>block-or-minor-environment-elements</reference>
	<reference>inline-elements</reference>
      </one-of>
    </children>
  </entry>

  <entry>
    <xpath>//html5table//tr/td</xpath>
    <attributes>
      <entry>
	<name>rowspan</name>
	<type>integer(0,)</type>
	<default/>
      </entry>
      <entry>
	<name>colspan</name>
	<type>integer(0,)</type>
	<default/>
      </entry>

      <!-- HACK -->
      <entry>
	<name>align</name>
	<type>enum('left','right','center')</type>
	<default/>
      </entry>
      <entry>
	<name>style</name>
	<type>string</type>
	<default/>
      </entry>
      <entry>
	<name>width</name>
	<type>string</type>
	<default/>
      </entry>
      <!-- /HACK -->

    </attributes>
    <children>
      <one-of>
	<reference>block-or-minor-environment-elements</reference>
	<reference>inline-elements</reference>
      </one-of>
    </children>
  </entry>

</spec>
