      <entry>
    <name>list-type</name>
    <type>enum("bulleted","enumerated")</type>
    <default>bulleted</default>
      </entry>
      <entry>
    <name>bullet-style</name>
    <type>enum("bullet", "open-circle", "pilcrow", "rpilcrow", "asterisk", "dash", "section", "none")</type>
    <default>bullet</default>
